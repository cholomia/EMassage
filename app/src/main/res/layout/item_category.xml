<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="category"
            type="com.capstone.tip.emassage.model.data.Category" />

        <variable
            name="view"
            type="com.capstone.tip.emassage.ui.category.CategoryView" />
    </data>

    <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{() -> view.onCategoryItemClicked(category)}"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/activity_vertical_margin">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{() -> view.onCategoryItemClicked(category)}"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{category.title}"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{category.description}"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

            <!--<ImageView
                android:id="@+id/image_category"
                android:layout_width="match_parent"
                android:layout_height="128dp" />-->

        </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->

</layout>
