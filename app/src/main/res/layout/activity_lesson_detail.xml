<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lesson"
            type="com.capstone.tip.emassage.model.data.Lesson" />

        <variable
            name="view"
            type="com.capstone.tip.emassage.ui.lessons.detail.LessonDetailView" />
    </data>

    <LinearLayout
        android:id="@+id/activity_lesson_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.capstone.tip.emassage.ui.lessons.detail.LessonDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Objective"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{(theView) -> view.onPopTextToSpeech(theView, lesson.objective)}"
                android:tint="@color/blue"
                app:srcCompat="@drawable/ic_volume_up_black_24dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:drawable/edit_text"
            android:text="@{lesson.objective}"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Summary"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{(theView) -> view.onPopTextToSpeech(theView, lesson.summary)}"
                android:tint="@color/blue"
                app:srcCompat="@drawable/ic_volume_up_black_24dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:text="@{lesson.summary}"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:onClick="@{() -> view.onMenu()}"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:background="@android:drawable/edit_text"
                android:tint="@color/blue"
                app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

            <ImageView
                android:onClick="@{() -> view.onMenu()}"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@android:drawable/edit_text"
                android:tint="@color/blue"
                app:srcCompat="@drawable/ic_menu_black_24dp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:background="@android:drawable/edit_text"
                android:onClick="@{() -> view.onViewPdf(lesson)}"
                android:tint="@color/blue"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() -> view.onViewPdf(lesson)}"
                android:text="View Pdf" />

            <Button
                android:id="@+id/btn_take_quiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() -> view.onTakeQuiz(lesson)}"
                android:text="Take Quiz" />

        </LinearLayout>

    </LinearLayout>

</layout>

